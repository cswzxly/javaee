<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.mappers.VideoMapper">

	<resultMap type="Video" id="video">
		<id property="theID" column="theID" />
		<result property="catalogID" column="catalogID" />
		<result property="title" column="title" />		
        <result property="contents" column="contents" />
        <result property="creater_pid" column="creater_pid" />
        <result property="creater_name" column="creater_name" />
        <result property="create_date" column="create_date" />
        <result property="update_pid" column="update_pid" />
        <result property="update_date" column="update_date" />
        <result property="source" column="source" />
        <result property="status" column="status" />
        <result property="sort" column="sort" />
        <result property="releaseDate" column="releaseDate"/>
        <result property="isindex" column="isindex"/>
        <result property="viewedNum" column="viewedNum"/>
    </resultMap>



	<select id="queryVideoByBean" parameterType="Video" resultType="Video">
		SELECT * FROM T_Video
        <trim suffixOverrides="and">
            <where>
                <if test="theID!=null">theID=#{theID} and</if>
                <if test="catalogID!=null">catalogID=#{catalogID} and</if>
                <if test="title!=null">title=#{title} and</if>
                <if test="creater_pid!=null">creater_pid=#{creater_pid} and</if>
                <if test="create_date!=null">create_date=#{create_date} and</if>
                <if test="update_pid!=null">update_pid=#{update_pid} and</if>
                <if test="update_date!=null">update_date=#{update_date} and</if>
                <if test="source!=null">source=#{source} and</if>
                <if test="status!=null">status=#{status} and</if>
                <if test="sort!=null">sort=#{sort} and</if>
                <if test="releaseDate!=null">releaseDate=#{releaseDate} and</if>
                <if test="isindex!=null">isindex=#{isindex} and</if>
                <if test="viewedNum!=null">viewedNum=#{viewedNum} and</if>
            </where>
        </trim>

	</select>
	
	<select id="queryVideoListByBean" parameterType="Video" resultType="Video">
		SELECT * FROM T_Video
        <trim suffixOverrides="and">
            <where>
                <if test="theID!=null">theID=#{theID} and</if>
                <if test="catalogID!=null">catalogID=#{catalogID} and</if>
                <if test="title!=null">title=#{title} and</if>
                <if test="creater_pid!=null">creater_pid=#{creater_pid} and</if>
                <if test="create_date!=null">create_date=#{create_date} and</if>
                <if test="update_pid!=null">update_pid=#{update_pid} and</if>
                <if test="update_date!=null">update_date=#{update_date} and</if>
                <if test="source!=null">source=#{source} and</if>
                <if test="status!=null">status=#{status} and</if>
                <if test="sort!=null">sort=#{sort} and</if>
                <if test="releaseDate!=null">releaseDate=#{releaseDate} and</if>
                <if test="isindex!=null">isindex=#{isindex} and</if>
                <if test="viewedNum!=null">viewedNum=#{viewedNum} and</if>
            </where>
        </trim>
	</select>

    <select id="queryAllVideoList" resultType="Video">
        SELECT * FROM t_video order by sort asc,releaseDate desc
    </select>

    <insert id="insertVideo" parameterType="Video">
		insert into t_video
		(catalogID,title,creater_pid,create_date,update_pid,update_date,source,status,sort,releaseDate,url,isindex,viewedNum)
		values
		(#{catalogID},#{title},#{creater_pid},#{create_date},#{update_pid},#{update_date},#{source},#{status},#{sort},#{releaseDate},#{url},#{isindex},0)
	</insert>

    <update id="updateVideo" parameterType="Video">
		update t_video set
        <trim suffixOverrides=",">
              <if test="catalogID!=null">catalogID=#{catalogID} ,</if>
              <if test="title!=null">title=#{title} ,</if>
              <if test="creater_pid!=null">creater_pid=#{creater_pid} ,</if>
              <if test="create_date!=null">create_date=#{create_date} ,</if>
              <if test="update_pid!=null">update_pid=#{update_pid} ,</if>
              <if test="update_date!=null">update_date=#{update_date} ,</if>
              <if test="source!=null">source=#{source} ,</if>
              <if test="status!=null">status=#{status} ,</if>
              <if test="sort!=null">sort=#{sort} ,</if>
              <if test="releaseDate!=null">releaseDate=#{releaseDate} ,</if>
              <if test="isindex!=null">isindex=#{isindex} ,</if>
              <if test="viewedNum!=null">viewedNum=#{viewedNum} ,</if>
        </trim>
        <where>theID=#{theID}</where>
	</update>

    <delete id="deleteVideo" parameterType="Video">
        delete t_video where theID = #{theID}
    </delete>
    
    <select id="getVideoListByBean" parameterType="AllClassBean" resultType="AllClassBean">
		SELECT * FROM T_Video
        <trim suffixOverrides="and">
            <where>
                <if test="theID!=null">theID=#{theID} and</if>
                <if test="catalogID!=null">catalogID=#{catalogID} and</if>
                <if test="title!=null">title like '%${title}%' and</if>
                <if test="creater_pid!=null">creater_pid=#{creater_pid} and</if>
                <if test="create_date!=null">create_date=#{create_date} and</if>
                <if test="update_pid!=null">update_pid=#{update_pid} and</if>
                <if test="update_date!=null">update_date=#{update_date} and</if>
                <if test="source!=null">source=#{source} and</if>
                <if test="status!=null">status=#{status} and</if>
                <if test="sort!=null">sort=#{sort} and</if>
                <if test="releaseDate!=null">releaseDate=#{releaseDate} and</if>
                <if test="isindex!=null">isindex=#{isindex} and</if>
                <if test="viewedNum!=null">viewedNum=#{viewedNum} and</if>
            </where>
        </trim>
        order by releaseDate desc
	</select>
	
	<select id="queryTopVideoList" parameterType="Video" resultType="Video">
		SELECT top 10* FROM T_Video
        <trim suffixOverrides="and">
            <where>
                <if test="theID!=null">theID=#{theID} and</if>
                <if test="catalogID!=null">catalogID=#{catalogID} and</if>
                <if test="title!=null">title=#{title} and</if>
                <if test="creater_pid!=null">creater_pid=#{creater_pid} and</if>
                <if test="create_date!=null">create_date=#{create_date} and</if>
                <if test="update_pid!=null">update_pid=#{update_pid} and</if>
                <if test="update_date!=null">update_date=#{update_date} and</if>
                <if test="source!=null">source=#{source} and</if>
                <if test="status!=null">status=#{status} and</if>
                <if test="sort!=null">sort=#{sort} and</if>
                <if test="releaseDate!=null">releaseDate=#{releaseDate} and</if>
                <if test="isindex!=null">isindex=#{isindex} and</if>
                <if test="viewedNum!=null">viewedNum=#{viewedNum} and</if>
            </where>
        </trim>
        order by releaseDate desc
	</select>
</mapper>